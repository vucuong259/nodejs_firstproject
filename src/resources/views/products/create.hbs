<div class="mt-4">
    <h3>Đăng sản phẩm</h3>
    <form method="POST" action="/products/store">
        <div class="form-group">
            <label for="description">Name</label>
            <input type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="description" aria-describedby="emailHelp" placeholder="Description" name="description">
        </div>
        <div class="form-group">
            <label for="videoid">VideoId</label>
            <input type="text" class="form-control" id="videoid" aria-describedby="emailHelp" placeholder="Video Id" name="videoid">
